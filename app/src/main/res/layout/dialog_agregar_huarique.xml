<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorSurface"
    android:orientation="vertical"
    android:padding="24dp"
    android:layout_margin="8dp"
    android:elevation="4dp">

    <EditText
        android:id="@+id/etNombreHuarique"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del huarique"
        android:textColor="@color/colorOnSurface"
        android:textColorHint="@color/colorOnSurfaceVariant"
        android:inputType="textPersonName"
        android:backgroundTint="@color/colorPrimary" />

    <Spinner
        android:id="@+id/spinnerCategoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/colorPrimary" />

    <Button
        android:id="@+id/btnElegirUbicacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Elegir ubicaciÃ³n en el mapa"
        android:layout_marginTop="16dp"
        android:textColor="@color/colorOnPrimary"
        android:backgroundTint="@color/colorPrimary" />

    <Button
        android:id="@+id/btnGuardarHuarique"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar"
        android:layout_marginTop="16dp"
        android:textColor="@color/colorOnPrimary"
        android:backgroundTint="@color/colorSecondary" />

</LinearLayout>
